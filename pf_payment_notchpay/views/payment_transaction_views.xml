<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="notchpay_payment_transaction_form" model="ir.ui.view">
		<field name="name">notchpay.payment.transaction.form</field>
		<field name="model">payment.transaction</field>
		<field name="inherit_id" ref="payment.payment_transaction_form"/>
		<field name="arch" type="xml">
			<field name="provider_reference" position="after">
				<field name="notchpay_callback_url" widget="website" invisible="state != 'pending'"/>
			</field>
		</field>
	</record>

</odoo>
