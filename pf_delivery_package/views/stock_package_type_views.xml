<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_package_type_view_form_inherit" model="ir.ui.view">
        <field name="name">stock.package.type.form.inherit</field>
        <field name="model">stock.package.type</field>
        <field name="inherit_id" ref="stock.stock_package_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="product_id"/>
            </xpath>
        </field>
    </record>

    <record id="stock_package_type_view_tree_inherit" model="ir.ui.view">
        <field name="name">stock.package.type.tree.inherit</field>
        <field name="model">stock.package.type</field>
        <field name="inherit_id" ref="stock.stock_package_type_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="product_id"/>
            </xpath>
        </field>
    </record>
</odoo>